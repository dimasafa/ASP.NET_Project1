@model NZWalks.UI.Models.DTO.RegionDto
@{
}

<h1 class="mt-3">Edit Region</h1>

@if (Model is not null)
{
    <form method="post" class="mt-3">

        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="id" readonly></input>
        </div>

        <div class="mt-3">
            <label class="form-label">Code</label>
            <input type="text" class="form-control" asp-for="Code"></input>
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name"></input>
        </div>

        <div class="mt-3">
            <label class="form-label">Image URL</label>
            <input type="text" class="form-control" asp-for="RegionImageUrl"></input>
        </div>

        <div class="mt-3 d-flex justify-content-between ">
            <button type="submit" class="btn btn-primary">Save</button>
            <button asp-controller="Regions" asp-action="Delete" type="submit" class="btn btn-delete">Delete</button>
        </div>

    </form>
}